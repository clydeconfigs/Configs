bindsym $mod+d exec --no-startup-id $HOME/Media/shell/search

bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Shift+x exec caja
bindsym $mod+z exec flameshot gui
bindsym $mod+c exec emote

bindsym $mod+m exec $HOME/Media/shell/bm3
bindsym $mod+n exec $HOME/Media/shell/weblinks
bindsym $mod+p exec $HOME/Media/shell/genrandom
bindsym $mod+g exec $HOME/Media/shell/google
bindsym $mod+b exec $HOME/Media/shell/autobluetooth
bindsym $mod+o exec $HOME/Media/shell/dictionary

bindsym $mod+s exec $HOME/Media/shell/sa
bindsym $mod+k exec $HOME/Media/shell/calculator
bindsym $mod+Shift+Escape exec $HOME/Media/shell/ip

bindsym $mod+i exec alacritty -e $HOME/Media/pw/pwm

bindsym $mod+a exec EDITOR=micro alacritty -e ranger $HOME/Media/Random
bindsym $mod+x exec EDITOR=micro alacritty -e ranger

bindsym --whole-window --border $mod+button4 exec i3-volume up 5 -P
bindsym $mod+button5 --whole-window --border exec i3-volume down 5 -P


gaps inner 4

for_window [class="^.*"] border pixel 0
default_floating_border pixel 0

exec xinput set-prop "SINOWEALTH GXT 970 Gaming Mouse" "libinput Accel Speed" -0.5

exec xautolock -time 10 -locker "i3lock -c 242626"

exec picom

exec fc-cache -fv

exec nitrogen --restore

#########################################
#
# changed defaults:
#

bindsym $mod+space floating toggle

bindsym $mod+Shift+space focus mode_toggle

font pango:monospace 15

bindsym $mod+Return exec alacritty

bindsym $mod+q kill

mode "resize" {
        bindsym j resize shrink width 5 px or 10 ppt
        bindsym k resize grow height 5 px or 10 ppt
        bindsym l resize shrink height 5 px or 10 ppt
        bindsym ntilde resize grow width 5 px or 10 ppt

        bindsym Left resize shrink width 5 px or 1 ppt
        bindsym Down resize grow height 5 px or 1 ppt
        bindsym Up resize shrink height 5 px or 1 ppt
        bindsym Right resize grow width 5 px or 1 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bar {
	mode hide
	modifier Mod1
	strip_workspace_numbers yes
    status_command i3status
    strip_workspace_numbers yes  # Removes borders around workspace numbers

    colors {
        separator #FF6B6B
        background #1A1A1A
        statusline #E0E0E0
        focused_workspace #1A1A1A #1A1A1A #E0E0E0
        active_workspace #1A1A1A #1A1A1A #E0E0E0
        inactive_workspace #1A1A1A #1A1A1A #979CA7
        urgent_workspace #FF6B6B #FF6B6B #E0E0E0
    }
}

bindsym $mod+Shift+e exec $HOME/Media/shell/exiti3

