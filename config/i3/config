#       $mod+Shift+f
bindsym $mod+Shift+g exec $rofi/translate
#       $mod+Shift+h (USED)
#       $mod+Shift+i 
#       $mod+Shift+j (USED)
#       $mod+Shift+k (USED) 
#       $mod+Shift+l (USED)
